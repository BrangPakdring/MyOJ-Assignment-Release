{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "rules": {
    "prefer-const": "error",
    "eqeqeq": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "brace-style": "error",
    "curly": "error",
    "prefer-template": "error",
    "spaced-comment": "error",
    "template-curly-spacing": [
      "error",
      "always"
    ]
  }
}